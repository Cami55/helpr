<%= render 'shared/navbar-in-app', class: "navbar-margin" %>
<div id="layout" class="container">
  <div id = "cardor">
    <span class="image_left">
      <%= image_tag "tyrion.jpg", alt: "alttext", class: "tyrion"%>
    </span>
    <div>
      <h2><%= @user.first_name %></h2>
      <h3><%= @user.last_name %></h3>
      <p><%= @user.bio %></p>
    </div>
</div>

<div id="reviews-completed-jobs">
  <span class="margin-left-one">
    <h2>Reviews</h2>
    <% @reviews.each do |review| %>
    <p><%= review.content %></p>
    <p><%= review.rating %></p>
    <% end %>
  </span>

   <span class="margin-left">
    <h2>Completed Jobs</h2>
        <% @posts.where(completed: true).each do |post| %>
        <p><%= post.title %></p>
        <p><%= post.content %></p>
        <p><%= post.date %></p>
        <% end %>
  </span>
</div>

<div id="pending-jobs-approved-jobs">
  <span class="margin-left-one">
    <h2>Pending Jobs</h2>
    <% @posts.where(completed: false).each do |post| %>
    <p><%= post.title %></p>
    <p><%= post.content %></p>
    <p><%= post.date %></p>
    <% end %>
  </span>

   <span class="margin-left-one">
    <h2>Approved Jobs</h2>
    <% @bids.where(approved: true).each do |bid| %>
    <p><%= bid.post.title %></p>
    <p><%= bid.post.content %></p>
    <p><%= bid.post.date %></p>
    <% end %>
  </span>
</div>

</div>
