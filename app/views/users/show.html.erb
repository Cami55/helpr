
<div class="container-narrow">
  <div class="user-info" >
    <% if  current_user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key,height: 150, :quality=>60, crop: :mfit, class: "avatar-show-square", alt: "profile image"  %>
    <% else %>
      <div class="avatar-show-square">
        <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
               width: 150, crop: :fill, class: "avatar-show-square", alt: "profile image")  %>
      </div>
    <% end %>
    <div class="info">
      <h2><%= @user.first_name %> <%= @user.last_name %></h2>
      <p><%= @user.bio %></p>
      <p class="address"><%= @user.address %></p>
    </div>
</div>
<div class="reviews">
  <h2>My Reviews</h2>
  <% @user.bids.where(approved: true).each do |bid| %>
    <% if bid.post.completed %>
      <% review = Review.find_by(user:bid.post.user, post:bid.post) %>
      <%= review.content %>
      <%= review.rating %>
    <% end %>
  <% end %>
</div>

</div>
