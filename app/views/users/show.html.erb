
<div class="container-narrow">
  <div class="user-info" >
    <% if  current_user.photo.attached? %>
      <div class="avatar-show-square" style="background-image: url('<%= cl_image_path current_user.photo.key, height: 250, width: 250, crop: :fill %>')">
      </div>
    <% else %>
      <div class="avatar-show-square">
        <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
               width: 150, crop: :fill, class: "avatar-show-square", alt: "profile image")  %>
      </div>
    <% end %>
    <div class="info">
      <h2><%= @user.first_name %> <%= @user.last_name %></h2>
      <p><%= @user.bio %></p>
      <p class="address"><%= @user.address %></p>
    </div>
</div>
<div class="reviews">
  <h2>My Reviews</h2>
</div>


</div>
