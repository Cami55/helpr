
<div id="layout" class="container">
  <div id = "cardor">
    <span class="image_left">

       <% if  current_user.photo.attached? %>
         <div class="avatar-show-square" style="background-image: url('<%= cl_image_path current_user.photo.key, height: 250, width: 250, crop: :fill %>')">
         </div>
       <% else %>
         <div class="avatar-show-square">
           <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
                 width: 150, crop: :fill, class: "avatar-show-square", alt: "profile image")  %>
         </div>
       <% end %>
    </span>
    <div>
      <h2><%= @user.first_name %></h2>
      <h3><%= @user.last_name %></h3>
      <p><%= @user.bio %></p>
    </div>
</div>

<div id="reviews-completed-jobs">
  <span class="margin-left-one">
    <h2>Reviews</h2>
    <% @reviews.each do |review| %>
      <p><%= review.content %></p>
      <p><%= review.rating %></p>
    <% end %>

    <div class="btn-general">
      <!-- update the post id to become dynamic -->
      <%= link_to "leave a review", new_post_review_path(4) %>
    </div>
  </span>

   <span class="margin-left">
    <h2>Completed Jobs</h2>
        <% @posts.where(completed: true).each do |post| %>
        <p><%= post.title %></p>
        <p><%= post.content %></p>
        <p><%= post.date %></p>
        <% end %>
  </span>
</div>

<div id="pending-jobs-approved-jobs">
  <span class="margin-left-one">
    <h2>Pending Jobs</h2>
    <% @posts.where(completed: false).each do |post| %>
    <p><%= post.title %></p>
    <p><%= post.content %></p>
    <p><%= post.date %></p>
    <% end %>
  </span>

   <span class="margin-left-one">
    <h2>Approved Jobs</h2>
    <% @bids.where(approved: true).each do |bid| %>
    <p><%= bid.post.title %></p>
    <p><%= bid.post.content %></p>
    <p><%= bid.post.date %></p>
    <% end %>
  </span>
</div>

</div>
