<div class="container">
  <div class="posts-container">
    <%= link_to new_post_path, class: "links" do %>
      <div class="create-post">
        <% if  current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key,height: 40, :quality=>60, crop: :mfit, class: "avatar", alt: "profile image"  %>
        <% else %>
          <%= cl_image_tag("fpatfvf9edoaaqhbkfrt", width: 40, crop: :fill, class: "avatar", alt: "profile image")  %>
        <% end %>
        <p><strong>Need Help?</strong> Post a request.</p>
      </div>
    <% end %>
    <div class="post-container">
      <h6 class="sub-header">Completed Jobs</h6>
      <% @posts.where(completed: true).each do |post| %>
        <%= link_to post_path(post), class: "links" do %>
          <div class="post">
            <div class="avatar-post-container">
              <div>
                <% if  post.user.photo.attached? %>
                  <%= cl_image_tag post.user.photo.key,height: 72, :quality=>60, crop: :mfit, class: "avatar-extra-large", alt: "profile image"  %>
                <% else %>
                  <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
                        width: 72, crop: :fill, class: "avatar-extra-large", alt: "profile image")  %>
                <% end %>
              </div>
              <div class="post-content">
                <h3><%= post.title %></h3>
                <p><%= post.content %></p>
              </div>
            </div>
            <div class="date-btn">
              <p><%= post.date.nil? ? "ASAP" : post.date %></p>
            </div>
          </div>
        <% end %>
      <% end %>
      <h6 class="sub-header">Pending Jobs</h6>
      <% @posts.where(completed: false).each do |post| %>
        <%= link_to post_path(post), class: "links" do %>
          <div class="post">
            <div class="avatar-post-container">
              <div>
                <% if  post.user.photo.attached? %>
                  <%= cl_image_tag post.user.photo.key,height: 72, :quality=>60, crop: :mfit, class: "avatar-extra-large", alt: "profile image"  %>
                <% else %>
                  <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
                        width: 72, crop: :fill, class: "avatar-extra-large", alt: "profile image")  %>
                <% end %>
              </div>
              <div class="post-content">
                <h3><%= post.title %></h3>
                <p><%= post.content %></p>
              </div>
            </div>
            <div class="date-btn">
              <p><%= post.date.nil? ? "ASAP" : post.date %></p>
            </div>
          </div>
        <% end %>
      <% end %>
      <h6 class="sub-header">Approved Jobs</h6>
      <% @bids.where(approved: true).each do |bid| %>
        <%= link_to post_path(bid.post), class: "links" do %>
          <div class="post">
            <div class="avatar-post-container">
              <div>
                <% if  bid.post.user.photo.attached? %>
                  <%= cl_image_tag bid.post.user.photo.key,height: 72, :quality=>60, crop: :mfit, class: "avatar-extra-large", alt: "profile image"  %>
                <% else %>
                  <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
                        width: 72, crop: :fill, class: "avatar-extra-large", alt: "profile image")  %>
                <% end %>
              </div>
              <div class="post-content">
                <h3><%= bid.post.title %></h3>
                <p><%= bid.post.content %></p>
              </div>
            </div>
            <div class="date-btn">
              <p><%= bid.post.date.nil? ? "ASAP" : bid.post.date %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="right col-5">
    <h1>Top Helpr's</h1>
    <div class="bidder mb-4">
      <%= image_tag "tyrion.jpg", alt: "alttext", class: "tyrion mr-3", id: "tyrion-with-br1" %>
    <div class="ml-4">
    <div>
      <%= @user.first_name %> <%= @user.last_name %>
    </div>
      <i class="far fa-star"></i>
      <i class="far fa-star"></i>
      <i class="far fa-star"></i>
      <i class="far fa-star"></i>
      <i class="far fa-star"></i>
    </div>
    <div>
      <div class="d-flex justify-content-center align-items-center ml-3 mr-3">
        <div class="ASAP3 m-1">
          <%= image_tag "help", alt: "alttext", class: "icon"%>
        </div>
        <div class="ASAP4 m-1">
          <%= image_tag "worker", alt: "alttext", class: "icon" %>
        </div>
      </div>
      <div class="d-flex justify-content-center align-items-center ml-3 mr-3">
        <div class="ASAP2 m-1">
          <%= image_tag "bulb", alt: "alttext", class: "icon" %>
          </div>
          <div class="ASAP1 m-1">
           <%= image_tag "trolley", alt: "alttext", class: "icon" %>
          </div>
        </div>
      </div>
    </div>
    <div class="map-container map-dashboard">
      <div id="map"
           style="width: 100%; height: 600px;"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      <div class="map-bottom">
        <h3>Help map</h3>
        <p>See all the help requests in your area on the help map.</p>
      </div>
    </div>
  </div>
</div>
