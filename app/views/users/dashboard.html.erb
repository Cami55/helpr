<div class="container">
  <div class="dashboard-container">
    <h1 class="margin-bottom">Welcome to your dashboard</h1>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">My Help Requests</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">My Offers to Help</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <div class="post-container">
          <h6 class="sub-header-purple">Ready for approval</h6>
          <% @posts.where(completed: false).each do |post| %>
            <% unless post.bids.empty? || post.bids.first.approved %>
              <%= link_to post_path(post), class: "links" do %>
                <div class="post">
                  <div class="avatar-post-container">
                    <div>
                      <% if  post.user.photo.attached? %>
                        <%= cl_image_tag post.user.photo.key,height: 72, :quality=>60, crop: :mfit, class: "avatar-extra-large", alt: "profile image"  %>
                      <% else %>
                        <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
                              width: 72, crop: :fill, class: "avatar-extra-large", alt: "profile image")  %>
                      <% end %>
                    </div>
                    <div class="post-content">
                      <h3><%= post.title %></h3>
                      <p><%= post.content %></p>
                    </div>
                  </div>
                  <div class="date-btn">
                    <p><%= post.date.nil? ? "ASAP" : post.date %></p>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>

          <h6 class="sub-header-green">Approved, waiting to be completed</h6>
          <% @posts.where(completed: false).each do |post| %>

            <% if post.bids.any? && post.bids.first.approved%>
              <%= link_to post_path(post), class: "links" do %>
                <div class="post">
                  <div class="avatar-post-container">
                    <div>
                      <% if  post.user.photo.attached? %>
                        <%= cl_image_tag post.user.photo.key,height: 72, :quality=>60, crop: :mfit, class: "avatar-extra-large", alt: "profile image"  %>
                      <% else %>
                        <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
                              width: 72, crop: :fill, class: "avatar-extra-large", alt: "profile image")  %>
                      <% end %>
                    </div>
                    <div class="post-content">
                      <h3><%= post.title %></h3>
                      <p><%= post.content %></p>
                    </div>
                  </div>
                  <div class="date-btn">
                    <p><%= post.date.nil? ? "ASAP" : post.date %></p>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>

          <h6 class="sub-header-blue">Pending</h6>
          <% @posts.where(completed: false).each do |post| %>
            <% if post.bids.empty? %>
              <%= link_to post_path(post), class: "links" do %>
                <div class="post">
                  <div class="avatar-post-container">
                    <div>
                      <% if  post.user.photo.attached? %>
                        <%= cl_image_tag post.user.photo.key,height: 72, :quality=>60, crop: :mfit, class: "avatar-extra-large", alt: "profile image"  %>
                      <% else %>
                        <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
                              width: 72, crop: :fill, class: "avatar-extra-large", alt: "profile image")  %>
                      <% end %>
                    </div>
                    <div class="post-content">
                      <h3><%= post.title %></h3>
                      <p><%= post.content %></p>
                    </div>
                  </div>
                  <div class="date-btn">
                    <p><%= post.date.nil? ? "ASAP" : post.date %></p>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>

          <h6 class="sub-header">Completed</h6>
          <% @posts.where(completed: true).each do |post| %>
            <%= link_to post_path(post), class: "links" do %>
              <div class="post">
                <div class="avatar-post-container">
                  <div>
                    <% if  post.user.photo.attached? %>
                      <%= cl_image_tag post.user.photo.key,height: 72, :quality=>60, crop: :mfit, class: "avatar-extra-large", alt: "profile image"  %>
                    <% else %>
                      <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
                            width: 72, crop: :fill, class: "avatar-extra-large", alt: "profile image")  %>
                    <% end %>
                  </div>
                  <div class="post-content">
                    <h3><%= post.title %></h3>
                    <p><%= post.content %></p>
                  </div>
                </div>
                <div class="date-btn">
                  <p><%= post.date.nil? ? "ASAP" : post.date %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <div class="post-container">
          <h6 class="sub-header-green">Approved Offers</h6>
          <% @bids.where(approved: true).each do |bid| %>
            <%= link_to post_path(bid.post), class: "links" do %>
              <% unless bid.post.completed %>
                  <div class="post">
                    <div class="avatar-post-container">
                      <div>
                        <% if  bid.post.user.photo.attached? %>
                          <%= cl_image_tag bid.post.user.photo.key,height: 72, :quality=>60, crop: :mfit, class: "avatar-extra-large", alt: "profile image"  %>
                        <% else %>
                          <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
                                width: 72, crop: :fill, class: "avatar-extra-large", alt: "profile image")  %>
                        <% end %>
                      </div>
                      <div class="post-content">
                        <h3><%= bid.post.title %></h3>
                        <p><%= bid.post.content %></p>
                      </div>
                    </div>
                    <div class="date-btn">
                      <p><%= bid.post.date.nil? ? "ASAP" : bid.post.date %></p>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>

            <h6 class="sub-header-blue">Pending Offers</h6>
            <% @bids.where(approved: false).each do |bid| %>

              <% unless bid.post.bids.any? {|bid| bid.approved} %>
                <%= link_to post_path(bid.post), class: "links" do %>
                      <div class="post">
                        <div class="avatar-post-container">
                          <div>
                            <% if  bid.post.user.photo.attached? %>
                              <%= cl_image_tag bid.post.user.photo.key,height: 72, :quality=>60, crop: :mfit, class: "avatar-extra-large", alt: "profile image"  %>
                            <% else %>
                              <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
                                    width: 72, crop: :fill, class: "avatar-extra-large", alt: "profile image")  %>
                            <% end %>
                          </div>
                          <div class="post-content">
                            <h3><%= bid.post.title %></h3>
                            <p><%= bid.post.content %></p>
                          </div>
                        </div>
                        <div class="date-btn">
                          <p><%= bid.post.date.nil? ? "ASAP" : bid.post.date %></p>
                        </div>
                      </div>
                  <% end %>
                <% end %>
              <% end %>

            <h6 class="sub-header">Completed Offers</h6>
            <% @bids.where(approved: true).each do |bid| %>
              <%= link_to post_path(bid.post), class: "links" do %>
                <% if bid.post.completed %>
                    <div class="post">
                      <div class="avatar-post-container">
                        <div>
                          <% if  bid.post.user.photo.attached? %>
                            <%= cl_image_tag bid.post.user.photo.key,height: 72, :quality=>60, crop: :mfit, class: "avatar-extra-large", alt: "profile image"  %>
                          <% else %>
                            <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
                                  width: 72, crop: :fill, class: "avatar-extra-large", alt: "profile image")  %>
                          <% end %>
                        </div>
                        <div class="post-content">
                          <h3><%= bid.post.title %></h3>
                          <p><%= bid.post.content %></p>
                        </div>
                      </div>
                      <div class="date-btn">
                        <p><%= bid.post.date.nil? ? "ASAP" : bid.post.date %></p>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="right col-5">
    <h1 class="margin-bottom">Top Helpr's</h1>
    <div class="bidder mb-4">
      <%= image_tag "tyrion.jpg", alt: "alttext", class: "tyrion mr-3", id: "tyrion-with-br1" %>
    <div class="ml-4">
    <div>
      <%= @user.first_name %> <%= @user.last_name %>
    </div>
      <i class="far fa-star"></i>
      <i class="far fa-star"></i>
      <i class="far fa-star"></i>
      <i class="far fa-star"></i>
      <i class="far fa-star"></i>
    </div>
    <div>
      <div class="d-flex justify-content-center align-items-center ml-3 mr-3">
        <div class="ASAP3 m-1">
          <%= image_tag "help", alt: "alttext", class: "icon"%>
        </div>
        <div class="ASAP4 m-1">
          <%= image_tag "worker", alt: "alttext", class: "icon" %>
        </div>
      </div>
      <div class="d-flex justify-content-center align-items-center ml-3 mr-3">
        <div class="ASAP2 m-1">
          <%= image_tag "bulb", alt: "alttext", class: "icon" %>
          </div>
          <div class="ASAP1 m-1">
           <%= image_tag "trolley", alt: "alttext", class: "icon" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
