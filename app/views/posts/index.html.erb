<div class="container">

  <div class="posts-container">
    <%= link_to new_post_path, class: "links" do %>
      <div class="create-post">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/anthonyPassler", class: "avatar", alt: "profile image" %>
        <p><strong>Need Help?</strong> Post a request.</p>
      </div>
    <% end %>
    <div class="post-container">

      <% @posts.each do |post| %>

        <%= link_to post_path(post), class: "links" do %>
          <div class="post">
            <div class="avatar-post-container">
              <div>
                <%= image_tag "https://kitt.lewagon.com/placeholder/users/anthonyPassler", class: "avatar-extra-large", alt: "profile image" %>
              </div>
              <div class="post-content">
                <h3><%= post.title %></h3>
                <p><%= post.content %></p>
              </div>
            </div>
            <div class="date-btn">
              <p><%= post.date.nil? ? "ASAP" : post.date %></p>
            </div>
          </div>
        <% end %>

      <% end %>
    </div>
  </div>

  <div class="map-container">
    <div id="map"
         style="width: 100%; height: 600px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    <div class="map-bottom">
      <h3>Help map</h3>
      <p>See all the help requests in your area on the help map.</p>
    </div>
  </div>
</div>
