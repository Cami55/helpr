<div class="container">
  <div class="show-post-container">
    <div class="show-post">
        <div class="img-text">
          <div>
            <% if  @post.user.photo.attached? %>
              <%= cl_image_tag @post.user.photo.key,height: 150, :quality=>60, crop: :mfit, class: "avatar-show-square", alt: "profile image"  %>
            <% else %>
              <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
                    width: 150, crop: :fill, class: "avatar-show-square", alt: "profile image")  %>
            <% end %>
          </div>
          <div class="show-text">
            <h3><%= @post.user.first_name %> <%= @post.user.last_name %></h3>
            <h4><%= @post.title %></h4>
            <p><%= @post.content %></p>
          </div>
        </div>
        <div class="date-btn">
          <p><%= @post.date.nil? ? "ASAP" : @post.date %></p>
        </div>
    </div>

      <% if current_user == @post.user %>
        <div class="see-offer">
          <p><strong>See your offers to help below</strong></p>
        </div>
      <% else %>
        <%= link_to post_bids_path(@post), method: :post do %>
          <div class="bid-offer">
            <p><strong>Offer your help</strong></p>
          </div>
        <% end %>
      <% end %>

    <div class="all-bids">
      <% approved = @post.bids.any? { |bid| bid.approved} %>
      <% if approved %>
        <% @post.bids.each do |bid|%>
            <% if bid.approved %>
              <div class="bid">
                <h3><%= bid.user.first_name %> <%= bid.user.last_name %></h3>
                <div class="view-approve">
                  <%= link_to user_path(bid.user) do %>
                    <div class="view">
                      <p><strong>View Profile</strong></p>
                    </div>
                  <% end %>
                  <%= link_to post_bid_path(@post, bid), method: :patch do %>
                    <div class="approved">
                      <p><strong>Approved!</strong></p>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
        <% end %>
      <% else %>
        <% @post.bids.each do |bid|%>
            <div class="bid">
              <h3><%= bid.user.first_name %> <%= bid.user.last_name %></h3>
              <div class="view-approve">
                <%= link_to user_path(bid.user) do %>
                  <div class="view">
                    <p><strong>View Profile</strong></p>
                  </div>
                <% end %>
                   <% if current_user == @post.user %>
                      <%= link_to post_bid_path(@post, bid), method: :patch do %>
                        <div class="approve">
                          <p><strong>Approve</strong></p>
                        </div>
                      <% end %>
                   <% else %>
                      <div class="pending">
                        <p><strong>Pending</strong></p>
                      </div>
                   <% end %>

              </div>
            </div>
        <% end %>
      <% end %>

    </div>

  </div>
  <div class="chat-container">
    <div class="header">
      <% if @chatroom %>
        <div class="wrapper">
          <div>
            <h1 class="chatroomheader">#<%= @chatroom.name %></h1>
          </div>

          <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
            <% @chatroom.messages.each do |message| %>
              <%= render 'messages/message', message: message %>
            <% end %>
          </div>

          <div class="type">
            <%= simple_form_for [@chatroom, @message] do |f| %>
            <%= f.input :content, label: 'Type your message here:' %>
            <% end %>
          </div>
        </div>
      <% else %>
        <%= link_to chatrooms_path(guest: @post.user, post_id: @post.id), method: :post do %>
          <h5>Start Chat</h5>
        <% end %>
      <% end %>
    </div>
    <div class="chat">

    </div>
    <%= link_to "Mark as completed", post_path(@post, completed: true), :method => :put, class: "btn btn-success"%>
  </div>

</div>
