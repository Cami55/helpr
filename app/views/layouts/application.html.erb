<!DOCTYPE html>
<html>
  <head>
    <title>Helpr | Building supportive communities</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>

    <%= favicon_link_tag %>
  </head>

  <body>
    <%= render 'shared/flashes' %>
    <% if user_signed_in? %>
      <%= render "shared/navbar-in-app" %>
    <% else %>
      <div id="navbar-landing" class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "helpr.png", style: "width: 100px" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a href="#about" class="nav-link">About</a>
      </li>
      <li class="nav-item">
        <a href="#how-it-works" class="nav-link">How it works</a>
      </li>
      <li class="nav-item">
        <a href="#showcase-helprs" class="nav-link">Meet our Helprs</a>
      </li>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
      <li class="nav-item"><%= link_to "Signup", new_user_registration_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>
    <% end %>

    <div class="min-height">
      <%= yield %>
    </div>

    <%= render "shared/footer"%>
  </body>
</html>
